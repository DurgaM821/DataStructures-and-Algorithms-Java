import java.io.*;
import java.util.*;




//User function Template for Java
public class Main{
    public static void main(String [] args){
        int N=125;
   
     System.out.print(sumOfDigits(N));
   
    }   
   
       public  static int sumOfDigits(int N) {
        // code here
        int sum=0;
        while(N!=0){
            sum=sum+N%10;
            N=N/10;
        }
        return sum;
   
   
       
   
    }
    
    
}
       